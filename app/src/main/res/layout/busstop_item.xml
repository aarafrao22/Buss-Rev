<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="4dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/BusStopCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jkhuy6"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/roadname"
        app:layout_constraintTop_toBottomOf="@id/roadname" />

    <TextView
        android:id="@+id/roadname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Victoria St"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <ImageView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/BusStopCode"
        android:src="@drawable/ic_baseline_directions_24"
        app:layout_constraintStart_toStartOf="@+id/directionname"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/directionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/direction"
        android:text="0 m"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direction" />


</androidx.constraintlayout.widget.ConstraintLayout>